<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
    </head>
    <body>
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="{{ type }}">
                    <strong>{{type}}</strong>: {{ message|trans({}, 'FabsteiShorturlBundle') }}
                </div>
            {% endfor %}
        {% endfor %}

        <div>
            {% block content %}
            {% endblock content %}
        </div>
    </body>
</html>
